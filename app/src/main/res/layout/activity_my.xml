<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LL">

    <TextView
        android:id="@+id/mainTitle"
        style="@style/margins.title.text"
        android:text="@string/Title"/>

    <ImageView
        android:id="@+id/logo"
        style="@style/margins.title"
        android:src="@drawable/starlog_black"/>

    <Button
        android:id="@+id/buttonRules"
        style="@style/margins.title.buttons"
        android:text="@string/rules"/>

    <Button
        android:id="@+id/buttonInfo"
        style="@style/margins.title.buttons"
        android:text="@string/info"/>
</LinearLayout>
